# Changing window focus
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east
cmd - h : yabai -m window --focus west

# Change between external displays
cmd + shift - i : yabai -m display --focus east
cmd + shift - u : yabai -m display --focus west

# flip y axis
cmd + shift - y : yabai -m space --mirror y-axis

# flip x axis
cmd + shift - x : yabai -m space --mirror x-axis

# move window and split
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - h : yabai -m window --warp west
cmd + shift - l : yabai -m window --warp east

# open alacritty
# cmd - return : open -na alacritty

# balance windows
cmd + shift - 0 : yabai -m space --balance

# move windows to other monitor and focus
cmd + alt - 1 : yabai -m window --display 1; yabai -m display --focus 1
cmd + alt - 2 : yabai -m window --display 2; yabai -m display --focus 2

## increase window size
cmd + shift - left : yabai -m window --resize left:-20:0
cmd + shift - down : yabai -m window --resize bottom:0:20
cmd + shift - up : yabai -m window --resize top:0:-20
cmd + shift - right : yabai -m window --resize right:20:0

# decrease window size
cmd + alt - right : yabai -m window --resize left:20:0
cmd + alt - up : yabai -m window --resize bottom:0:-20
cmd + alt - down : yabai -m window --resize top:0:20
cmd + alt - left : yabai -m window --resize right:-20:0

# rotate tree
cmd + alt - r : yabai -m space --rotate 90

# change split
cmd + alt - space : yabai -m window --toggle split

# focus space
cmd - 1: yabai -m space --focus 1
cmd - 2: yabai -m space --focus 2
cmd - 3: yabai -m space --focus 3
cmd - 4: yabai -m space --focus 4
cmd - 5: yabai -m space --focus 5
cmd - 6: yabai -m space --focus 6
cmd - 7: yabai -m space --focus 7
cmd - 8: yabai -m space --focus 8
cmd - 9: yabai -m space --focus 9

# focus display
cmd + ctrl - 1: yabai -m display --focus 1
cmd + ctrl - 2: yabai -m display --focus 2

# switch space
cmd + ctrl + shift - right: yabai -m space --focus next
cmd + ctrl + shift - left: yabai -m space --focus prev

# create space
cmd + shift - c: yabai -m space --create; yabai -m space --focus last
cmd + shift - d: yabai -m space --destroy

# move window to space and focus space
cmd + shift - 1 : yabai -m window --space  1; yabai -m space --focus 1
cmd + shift - 2 : yabai -m window --space  2; yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space  3; yabai -m space --focus 3
cmd + shift - 4 : yabai -m window --space  4; yabai -m space --focus 4
cmd + shift - 5 : yabai -m window --space  5; yabai -m space --focus 5
cmd + shift - 6 : yabai -m window --space  6; yabai -m space --focus 6
cmd + shift - 7 : yabai -m window --space  7; yabai -m space --focus 7
cmd + shift - 8 : yabai -m window --space  8; yabai -m space --focus 8
cmd + shift - 9 : yabai -m window --space  9; yabai -m space --focus 9
cmd + shift - 0 : yabai -m window --space 10; yabai -m space --focus 10
