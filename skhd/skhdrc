# Changing window focus
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north 
cmd - l : yabai -m window --focus east 
cmd - h : yabai -m window --focus west

# Change between external displays
cmd + shift - i : yabai -m display --focus east 
cmd + shift - u : yabai -m display --focus west 

# flip y axis
cmd + shift - y : yabai -m space --mirror y-axis

# flip x axis
cmd + shift - x : yabai -m space --mirror x-axis

# move window and split
cmd + ctrl - j : yabai -m window --warp south
cmd + ctrl - k : yabai -m window --warp north 
cmd + ctrl - h : yabai -m window --warp west 
cmd + ctrl - l : yabai -m window --warp east

# open alacritty
cmd - return : open -na alacritty

# balance windows
cmd + ctrl - 0 : yabai -m space --balance

# move windows to other monitor and focus
cmd + ctrl - 1 : yabai -m window --display 1; yabai -m display --focus 1
cmd + ctrl - 2 : yabai -m window --display 2; yabai -m display --focus 2

## increase window size
cmd + alt - left : yabai -m window --resize left:-20:0
cmd + alt - down : yabai -m window --resize bottom:0:20
cmd + alt - up : yabai -m window --resize top:0:-20
cmd + alt - right : yabai -m window --resize right:20:0

# decrease window size
cmd + ctrl - right : yabai -m window --resize left:20:0
cmd + ctrl - up : yabai -m window --resize bottom:0:-20
cmd + ctrl - down : yabai -m window --resize top:0:20
cmd + ctrl - left : yabai -m window --resize right:-20:0

# rotate tree
cmd - r : yabai -m space --rotate 90
